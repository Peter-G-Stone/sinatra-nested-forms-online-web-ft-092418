<% pirate = Pirate.all[0] %>

<body>
    
<h1><%= pirate.name%> </h1>
<h2>
<li>Height: <%= pirate.height %></li>
<li>Weight: <%= pirate.weight %></li>
</h2>

<% i = 0 %>
<% pirate.ships.each do |ship| %>
    <p>Ship <%=i%>
        <li>Name: <%=ship.name%></li>
        <li>Type: <%=ship.type%></li>
        <li>Booty type: <%=ship.booty%></li>
    </p>
    <% i += 1 %>
<% end %>
</body>